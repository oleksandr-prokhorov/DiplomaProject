@page "{id:int}"
@model QueriesToDBTest.Pages.Client.VisitorDisabledCertificateModel
@{
    Layout = "./_Visitor_Layout";
}
<style type="text/css">
    #button {
        margin-top: 10px;
    }
    #center {
        margin: 10px;
    }
   </style>
   <a asp-page="VisitorDocuments" asp-route-id=@Model.Id><img src="~/return.png"  width="64" height="64"></a>
<div class="form-wrap">
  <div class="profile">
    <h3>Створення довідки</h3>
    <h4>@Model.Message</h4>
  </div>
  <div asp-validation-summary="All"></div>
  <form method="post">
    <div>
        <label>Ім'я</label><br /><input asp-for="disabledCertificate.f_name" />
        </div>
    <div>
        <label>По-батькові</label><br /><input asp-for="disabledCertificate.patronymic" />
        </div>
    <div>
        <label>Прізвище</label><br /><input asp-for="disabledCertificate.l_name" />
        </div>
    <div>
        <label>Дата народження</label><br /><input asp-for="disabledCertificate.date_of_birth"   />
        </div>
        <input asp-for="disabledCertificate.guardian_no" type="hidden" value="@Model.Id"/>
        <div>
            <label>Група інвалідності</label><br />
            @foreach (var type in Model.disability_groups)
            {
                <input type="radio" asp-for="disabledCertificate.disability_group" id="center" value="@type" />@type <br />
            }
        </div>
    <input type="submit" id=button class="btn btn-success btn-sm" value="Оформити довідку" />
  </form> 
</div>
